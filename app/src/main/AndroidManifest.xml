<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ui.android.pro.userinterface" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LinearActivity"
            android:label="@string/linear_layout" />
        <activity
            android:name=".RelativeActivity"
            android:label="@string/relative_layout" />
        <activity
            android:name=".GridActivity"
            android:label="@string/grid_layout" />
        <activity
            android:name=".DrawerActivity"
            android:label="@string/draweer_layout" />
        <activity
            android:name=".SlidingPaneActivity"
            android:label="@string/sliding_layout" />
        <activity
            android:name=".ViewPagingActivity"
            android:label="@string/paging_layout"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ui.android.pro.userinterface.MainActivity" />
        </activity>
    </application>

</manifest>
